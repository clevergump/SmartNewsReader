<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clevergump.newsreader" >

    <!-- 联网时需要申请的权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 检查是否有网络时需要申请的权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- 用于缓存存储到SD卡时需要申请的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".netease_news.activity.NeteaseNewsListActivity"
            android:theme="@style/Theme.PageIndicatorDefaults">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".netease_news.activity.NeteaseNewsDetailActivity"/>
        <activity android:name=".netease_news.activity.NeteaseImageDetailActivity"/>
    </application>

</manifest>