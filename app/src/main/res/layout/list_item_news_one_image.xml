<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_netease_news_list_item">

    <ImageView
        android:id="@+id/iv_news_list_item_one_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/news_list_item_top_or_bottom_margin"
        android:layout_marginBottom="@dimen/news_list_item_top_or_bottom_margin"
        android:layout_marginLeft="@dimen/news_list_item_left_or_right_margin"
        android:layout_marginRight="@dimen/news_list_item_left_or_right_margin"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_news_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_news_list_item_one_image"
        android:layout_toRightOf="@+id/iv_news_list_item_one_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/news_list_item_left_or_right_margin"
        android:text="@string/news_item_title_default"
        android:textSize="15sp"/>

<!--
    <TextView
        android:id="@+id/tv_news_item_digest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_news_list_item_one_image"
        android:layout_alignLeft="@id/tv_news_item_title"
        android:layout_alignRight="@id/tv_news_item_title"
        android:text="@string/news_item_digest_default"
        android:textColor="@color/color_netease_news_list_item_digest"
        android:textSize="13sp"/>
-->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/news_list_item_left_or_right_margin"
        android:layout_marginRight="@dimen/news_list_item_left_or_right_margin"
        android:layout_below="@id/iv_news_list_item_one_image"
        android:background="@color/news_list_item_divider"/>

</RelativeLayout>